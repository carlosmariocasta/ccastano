<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="#ff76d5ff">

        <TextView
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:text="Today,  "
            android:id="@+id/dia"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="151dp"
            android:layout_height="144dp"
            android:id="@+id/imageView"
            android:src="@drawable/sol"
            android:layout_gravity="right"
            android:layout_alignBottom="@+id/mingrade"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_alignStart="@+id/mingrade"
            android:layout_below="@+id/dia"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:text="20ยบ,  "
            android:id="@+id/maxgrade"
            android:textSize="40dp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:text="13ยบ,  "
            android:id="@+id/mingrade"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_marginStart="41dp"
            android:layout_below="@+id/maxgrade"
            android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/dias"
        android:layout_below="@+id/mingrade"
        android:layout_alignParentBottom="true"
        android:weightSum="1">


        <TextView
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Monday "
            android:id="@+id/monday"
            android:textColor="#ffffffff"
            android:layout_weight="0.24"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tuesday"
            android:id="@+id/tuesday"
            android:textColor="#ffffffff"
            android:layout_weight="0.20"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Wednesday"
            android:id="@+id/wednesday"
            android:textColor="#ffffffff"
            android:layout_weight="0.22"
            android:textSize="30dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Thursday"
            android:id="@+id/thursday"
            android:textColor="#ffffffff"
            android:layout_weight="0.18"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Friday"
            android:id="@+id/friday"
            android:textColor="#ffffffff"
            android:layout_weight="0.21"
            android:textSize="30dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/getdia"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/dia"
        android:textColor="#ffffffff"
        android:text="day" />


</RelativeLayout>


